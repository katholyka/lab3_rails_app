<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "Untitled" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <table>
<tr>
    <th> <%= link_to 'Customers', customers_path %>|</th>
    <th> <%= link_to 'Bookings', bookings_path %>  |</th>
    <th> <%= link_to 'Cars', cars_path %>      |</th>
    <th> <%= link_to 'Manufacturers', manufacturers_path %> |</th>
    <th> <%= link_to 'Mechanics', mechanics_path %> |</th>
    <th> <%= link_to 'Models', models_path %> |</th>
</tr>
</table>
<%= yield(:head) %>
</head>
<body>
    <div id="container">
        <div id="user_nav">
	    <% if  user_signed_in? %>
	        Signed in as <%= current_user.email %>. Not you?
                Signed in as <%= current_user.username %>. Not you?
		<%= link_to "Sign out", destroy_user_session_path %>
	    <% else %>
	        <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Sign in", new_user_session_path %>
	    <% end %>
	</div>
	
	<% flash.each do |name,msg| %>
	    <%= content_tag :div, msg, :id => "flash_#{name}"%>
	<% end %>
	
	
	
        <%= yield %>

    </div>
</body>
</html>
